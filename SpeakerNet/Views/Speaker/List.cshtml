@model IEnumerable<SpeakerListModel>
@{
    ViewBag.Title = T("Navigation_Speakers");
    }
@{
    var grid = new WebGrid(Model);
    var columns = grid.Columns(
        grid.Column("Id", "",  o => Html.ShowSpeakerLinks((SpeakerListModel)o.Value)),
        grid.Column("Fullname", typeof(SpeakerListModel).GetDisplayName("Fullname")),
        grid.Column("SessionCount", typeof(SpeakerListModel).GetDisplayName("SessionCount"))
        );
        
}

<h2>@T("Speaker_SpeakerList")</h2>

@grid.GetHtml(columns: columns)

<p>
    @Html.CreateSpeaker(T("Speaker_CreateNewSpeaker"))
</p>
