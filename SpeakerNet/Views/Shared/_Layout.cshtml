<!DOCTYPE html>
<html>
<head>
    <meta name="robots" content="noindex,nofollow,noodp,noydir" />
    <title>@ViewBag.Title - @SiteSettings.SiteName</title>
    <script src="@Url.Script("head.min.js")" type="text/javascript""></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        head.js("@Url.Script("jquery-1.4.4.min.js")", 
            function() {
                head.js("@Url.Script("jquery.unobtrusive-ajax.min.js")")
                    .js("@Url.Script("jquery.validate.min.js")", "@Url.Script("jquery.validate.unobtrusive.min.js")");
                @RenderSection("scriptFiles", false)
                });
        head.ready(function() {
            @RenderSection("scriptOnReady", false)
        });
    </script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>@SiteSettings.SiteName</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul class="menu">
                    <li>@Html.ActionLink(T("Navigation_Home"), "Index", "Home")</li>
                    <li>@Html.ActionLink(T("Navigation_Imprint"), "About", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink(T("Navigation_Speakers"), "List", "Speaker")</li>
                        <li>@Html.ActionLink(T("Navigation_Events"), "Index", "Event")</li>
                    }
                </ul>
            </div>
        </div>
        <div id="main">
            <div id="navigation">
                <ul class="menu">
                    @RenderSection("navigation", required: false)
                </ul>
            </div>
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>
</body>
</html>
