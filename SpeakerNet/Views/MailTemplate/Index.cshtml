}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@{
    var provider = ModelMetadataProviders.Current;
}
<table>
    <tr>
        <th></th>
        <th>
			@typeof(SpeakerNet.ViewModels.ListMailTemplateModel).GetDisplayName("Description")
        </th>
    </tr>

